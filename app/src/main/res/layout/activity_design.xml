<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Design">

    <LinearLayout
        android:id="@+id/Title"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:background="#06A77D"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desain"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rowDesain"
        android:layout_width="0dp"
        android:layout_height="470dp"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Mode Desain"
            android:textSize="35sp" />

        <LinearLayout
            android:id="@+id/btnScanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/dark_blue_button"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Scan Desain"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnGambar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/dark_blue_button"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Gambar Desain"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>